# Основные настройки приложения
SERVICE_NAME=em-discovery
DOCKER_COMPOSE_ENABLED=true

# Настройки сервера
SERVER_PORT=8761

# Настройки актуатора
ACTUATOR_PORT=8081
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus
HEALTH_DETAILS_VISIBLE=always

# Настройки Eureka сервера
EUREKA_INSTANCE_HOSTNAME=em-discovery
EUREKA_PREFER_IP=false
EUREKA_HEARTBEAT_INTERVAL=15
EUREKA_LEASE_EXPIRATION=45
EUREKA_ZONE=primary

# Настройки защиты и производительности
EUREKA_SELF_PRESERVATION=true
EUREKA_RENEWAL_THRESHOLD=0.85
EUREKA_EVICTION_INTERVAL=60000
EUREKA_CACHE_UPDATE_INTERVAL=30000
EUREKA_CACHE_EXPIRATION=180
EUREKA_SYNC_WAIT_TIME=5000

# Настройки логирования
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_EUREKA=INFO
LOG_LEVEL_DISCOVERY=INFO
LOG_PATTERN="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"